<article itemscope itemtype="https://schema.org/Article">
    <link itemprop="main-entity-of-page" href="<%= page.permalink %>">
    <div class="kratos-hentry kratos-post-inner clearfix">
        <header class="kratos-entry-header">
            <% if (page.title) { %>
                <h1 class="kratos-entry-title text-center" itemprop="name headline"><%- page.title %></h1>
            <% } %>
        </header>
        <div class="kratos-post-content kr-page">
            <div itemprop="articleBody"><%- page.content %></div>
        </div>
        <% if (typeof page.show_copyright !== 'undefined' ? page.show_copyright : theme.copyright_notice.in_page.enable_at.includes("page")) { %>
            <div class="kratos-copyright text-center clearfix">
                <span itemprop="copyright-notice"><%- theme.copyright_notice.in_page.template %></span>
            </div>
        <% } %>
        <footer class="kratos-entry-footer clearfix">
            <% if (theme.pages.donate || theme.pages.share) { %>
                <div class="post-actions text-center clearfix" id="post-actions">
                <% if (theme.pages.donate) { %>
                    <a class="donate" href="javascript:;" onclick="krOpenDonateModal()"><i class="fa fa-bitcoin"></i> <%- __('donate') %></a>
                <% } %>
                <% if (theme.pages.share) { %>
                    <a class="share" href="javascript:;" onclick="krOpenShareModal()"><i class="fa fa-share-alt"></i> <%- __('share') %></a>
                    <%- partial('_utils/share-func', { page: page, theme: theme, config: config }) %>
                <% } %>
                </div>
            <% } %>
            <div class="footer-tag clearfix">
                <div class="pull-date">
                    <time datetime="<%= date_xml(page.updated) %>" itemprop="dateModified"><%- __('last_modify') %><%- date(page.updated) %></time>
                </div>
            </div>
        </footer>
    </div>
    <% if (page.comments && theme.comments.core.enable_at.includes('page')) { %>
        <div class="comment-page">
            <%- (theme.comments.core.template._shared + theme.comments.core.template.page).replaceAll("$PATH", url_for(page.path)) %>
        </div>
    <% } %>
</article>